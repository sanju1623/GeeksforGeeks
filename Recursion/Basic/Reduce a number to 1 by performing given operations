class Solution { 

static int countways(int n) 
{ 
	if (n == 1) 
		return 0; 
	else if (n % 2 == 0) 
		return 1 + countways(n / 2); 
	else
		return 1 + Math.min(countways(n - 1), 
							countways(n + 1)); 
} 

public static void main(String args[]) 
{ 
	int n = 654; 

	System.out.println(countways(n)); 

} 
} 
